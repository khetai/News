            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="post-title-wrapper">
                        <h2 class="m-b-xs-0 axil-post-title hover-line">@ViewBag.Name["CategoryName" + @localizer["Az"].Value]</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
