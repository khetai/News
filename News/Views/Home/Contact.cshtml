@using System.Globalization;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumb-wrapper">
	<div class="container">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				
				<li class="breadcrumb-item active" aria-current="page">@localizer["Əlaqə"]</li>
			</ol>
			<!-- End of .breadcrumb -->
		</nav>
	</div>
	<!-- End of .container -->
</div>

<section class="banner banner__default bg-grey-light-three">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-12">
				<div class="post-title-wrapper">
					<h2 class="m-b-xs-0 axil-post-title hover-line">@localizer["Əlaqə"]</h2>
				</div>
				<!-- End of .post-title-wrapper -->
			</div>
			<!-- End of .col-lg-8 -->
		</div>
	</div>
	<!-- End of .container -->
</section>
<!-- End of .banner -->

<div class="axil-about-us section-gap  section-gap-top__with-text">
	<div class="container">

		<div class="section-title d-block text-center">
			<h2 class="axil-title m-b-xs-20">@localizer["Təklif və iradlarınızı bizə bildirin"]</h2>
			<p>
				@localizer["Harada və nə vaxt bizə ehtiyacınız olarsa, Bütün dəstək ehtiyaclarınız üçün bizimlə əlaqə saxlayın,"]
				<br>@localizer["texniki, ümumi sorğular və ya məlumat dəstəyi göstərmək üçün buradayıq."]
			</p>
		</div>

		@*<figure class="m-b-xs-30 p-t-xs-10">
			<img src="~/images/contactimg.jpg" alt="contact banner" class="img-fluid mx-auto">
		</figure>*@
	</div>
	<!-- End of .container -->
</div>
<!-- End of .section-gap -->

<section class="contact-form section-gap bg-grey-light-three ">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-7">
				<div class="axil-contact-form-block m-b-xs-30">
					<div class="section-title d-block">
						<h2 class="h3 axil-title m-b-xs-20">
							@localizer["Bizə yazın"]
							
						</h2>
						<p>
							@localizer["Bütün məlumatları doldurmağınız vacibdir"]
							
						</p>
					</div>
					<!-- End of .section-title -->

					<div class="axil-contact-form-wrapper p-t-xs-10">
						<form method="post" action="/Home/Contact" class=" row no-gutters">

							<div class="form-group col-12">
								<label for="contact-name">@localizer["Ad"]</label>
								<input type="text" name="contactName" id="contact-name">
							</div>

							<div class="form-group col-12">
								<label for="contact-phone">@localizer["Telefon"]</label>
								<input type="text" name="contactPhone" id="contact-phone">
							</div>

							<div class="form-group col-12">
								<label for="contact-email">@localizer["E-poçt"]</label>
								<input type="email" name="contactEmail" id="contact-email">
							</div>

							<div class="form-group col-12">
								<label for="contact-message">@localizer["Mesaj"]</label>
								<textarea name="contactMessage" id="contact-message"></textarea>
							</div>

							<div class="col-12">
								<button class="btn btn-primary m-t-xs-0 m-t-lg-20">@localizer["Göndər"]</button>
							</div>
						</form>
						<!-- End of .axil-contact-form -->
					</div>
					<!-- End of .axil-contact-form-wrapper -->
				</div>
				<!-- End of .axil-contact-form-block -->
			</div>
			<!-- End of .col-lg-6 -->

			<div class="col-lg-5">
				<div class="axil-contact-info-wrapper p-l-md-45 m-b-xs-30">
					<div class="axil-contact-info-inner">
						<h2 class="h4 m-b-xs-10">
							@localizer["Əlaqə məlumatları"]
							
						</h2>
						<div class="axil-contact-info">
							<address class="address">
								<p class="mid m-b-xs-30">
									Baki şəhəri, Nəsimi rayonu, Süleyman Rüstəm 47
								</p>
								<p>@localizer["Baş redaktor - Toğrul Abbasov"]</p>
								<div>
									<a class="tel" href="tel:8884562790">
										<i class="fas fa-phone"></i>+994506880012
									</a>
								</div>
								<div>
									<a class="tel" href="tel:12125553333">
										<i class="fa-solid fa-envelope"></i>info@getnews.az
									</a>
								</div>
							</address>
							<!-- End of address -->

							<div class="contact-social-share m-t-xs-30">
								<div class="axil-social-title h5"> @localizer["Bizi izləyin"]</div>
								<ul class="social-share social-share__with-bg">
									<li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
									<li><a href="#"><i class="fab fa-twitter"></i></a></li>
									<li><a href="#"><i class="fab fa-instagram"></i></a></li>
									<li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
								</ul>
							</div>
							<!-- End of .contact-shsdf -->
						</div>
						<!-- End of .axil-contact-info -->
					</div>
					<!-- End of .axil-contact-info-inner -->
				</div>
				<!-- End of .axil-contact-info-wrapper -->
			</div>
			<!-- End of .col-lg-6 -->
		</div>
		<!-- End of .row -->
	</div>
	<!-- End of .container -->
</section>
<!-- End of .contact-form -->

<section class="section-gap our-location section-gap-top__with-text">
	<div class="container">
		<div class="section-title">
			<h2 class="axil-title m-b-xs-40">
				@localizer["Ünvan"]
			</h2>
		</div>
		<!-- End of .section-title -->

		<div class="axil-map-wrapper m-b-xs-30">

